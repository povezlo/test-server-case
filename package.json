{
  "name": "fe-school-backend",
  "version": "1.0.0",
  "description": "An app for managing music tracks.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run src/__tests__/health.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "bd:reset": "rm -rf ./data && cp -r ./data-initial ./data",
    "seed": "ts-node src/seed.ts",
    "seed:prod": "node dist/seed.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-tools/schema": "^10.0.23",
    "@types/node": "^22.13.9",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "fastify": "^5.2.1",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.24.2",
    "graphql-upload": "^17.0.0",
    "graphql-upload-minimal": "^1.6.1",
    "mercurius": "^16.2.0",
    "mercurius-upload": "^8.0.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/graphql-upload": "^17.0.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.0.7",
    "supertest": "^7.0.0",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=v20.13.1",
    "npm": ">=v10.5.2"
  }
}
